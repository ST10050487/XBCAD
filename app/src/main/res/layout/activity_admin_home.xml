<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome">
    <!--Toolbar-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Header Image-->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="fill_horizontal"
        android:adjustViewBounds="true"
        android:background="@drawable/banner_frame"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />



    <!--Layout for Logo and Message-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <TextView
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:textSize="14dp"
                android:gravity="left"
                android:text="@string/welcome"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:gravity="left"
                android:textSize="20dp"
                android:text="Matthew Joubert"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:gravity="left"
                android:textSize="12dp"
                android:text="20 July 2024"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"/>
            <!--Layout for Welcome Msg-->
        </LinearLayout>
        <ImageView
            android:id="@+id/Logo"
            android:layout_width="89dp"
            android:layout_height="88dp"
            android:background="@drawable/trans_logo_figma"
            android:gravity="right" />
    </LinearLayout>

    <!--QuickAccess Cardview-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuickAccess"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/maroon"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="left"
                android:paddingHorizontal="15dp"
                android:text="@string/admin_quick_access"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/btn_interactions"
                        android:layout_width="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="100dp"
                        android:background="@drawable/btn_back"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_back"
                            android:foreground="@drawable/ic_interactions" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/interactions"
                            android:textSize="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_CreateAdmin"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/btn_back"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_back"
                            android:foreground="@drawable/ic_create_admin" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/new_admin"
                            android:textSize="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_reviewProfiles"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/btn_back"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_back"
                            android:foreground="@drawable/ic_player_review" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/player_review"
                            android:textSize="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--Application Cardview-->


    <!--Btns Row One-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:backgroundTint="@color/lightBlue"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.439">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_bold"
            android:text="@string/application_management"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardQuickAccess">

        <LinearLayout
            android:id="@+id/btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">
                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_shop_icon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_bold"
                android:text="@string/shop"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_sport_management_icon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_bold"
                android:text="Sports"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_event_management_icon" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/inter_bold"
                android:text="@string/events"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

    <!--Btns Row TWO-->
    <LinearLayout
        android:id="@+id/row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_1" >

        <LinearLayout
            android:id="@+id/btn_players"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_players_profile_icon" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/players"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_addFixture"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_new_event" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/new_fixture"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_addEvent"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="14dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:foreground="@drawable/ic_new_fixture" />
            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="New Event"
                android:textSize="10dp"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:fontFamily="@font/inter_bold"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/backgroundtheme"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/admin_nav_header"
        app:itemIconSize="25sp"
        app:itemIconTint="@color/white"
        app:itemTextAppearance="@style/CustomNavigationViewItemText"
        app:itemTextColor="@color/white"
        app:menu="@menu/admin_nav_menu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-179dp"
        tools:layout_editor_absoluteY="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>