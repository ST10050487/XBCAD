<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProduct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/back_btn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/back_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prodImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="ProdImg"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_sample"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/prodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                 />

            <TextView
                android:id="@+id/prodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R500"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="20dp"
                />

            <TextView
                android:id="@+id/sizesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sizes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="-10dp"
                app:layout_constraintStart_toEndOf="@id/sizesTitle"
                />

            <LinearLayout
                android:id="@+id/sizeIcons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/sizesTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginStart="60dp">

                <!-- Size "S" -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="S"
                    android:gravity="center"
                    android:background="@drawable/size_background"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"/>

                <!-- Size "M" -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="M"
                    android:gravity="center"
                    android:background="@drawable/size_background"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Size "L" -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="L"
                    android:gravity="center"
                    android:background="@drawable/size_background"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Size "XL" -->
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="XL"
                    android:gravity="center"
                    android:background="@drawable/size_background"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/prodInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Info"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="-10dp"
                app:layout_constraintStart_toEndOf="@id/prodInfo" />

            <TextView
                android:id="@+id/ProdDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Placeholder"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="30dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>