<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upcomingMatchesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fixture 1 Layout -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fixture_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tab_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Date and Time Layout -->
                    <TextView
                        android:id="@+id/fixture_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday - August 26"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Time and Teams Layout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Team 1 Logo and Name -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- Team 1 Logo -->
                            <ImageView
                                android:id="@+id/team1_logo_1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/bosemansdamhig" />

                            <!-- Team 1 Name -->
                            <TextView
                                android:id="@+id/team1_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BOSMANSDAM"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Time Box -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fixture_time_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="08:00"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <!-- Green Date Box under the time -->
                            <TextView
                                android:id="@+id/fixture_date_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/green_box_background"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="26 August"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <!-- Team 2 Logo and Name -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- Team 2 Logo -->

                            <!-- Team 2 Name -->
                            <ImageView
                                android:id="@+id/team2_logo_1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginStart="0dp"
                                android:src="@drawable/egmeadhigh" />

                            <TextView
                                android:id="@+id/team2_name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EGMEAD HIGH"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Match Type and Age Group Combined (Dark Blue Background) -->
                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/rounded_bottom_background"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Match Type (e.g., Netball) -->
                        <TextView
                            android:id="@+id/match_type_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Netball"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <!-- Age Group -->
                        <TextView
                            android:id="@+id/age_group_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Under 16's"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>