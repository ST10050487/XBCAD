<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundtheme"
    tools:context=".StudentParentReg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_52sdp"
            android:fontFamily="@font/mullish_semibold"
            android:gravity="center"
            android:lineHeight="41.364dp"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="@dimen/_34ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/FirstNameField"
            android:layout_width="0dp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_44sdp"
            android:background="@drawable/rounded_edittext"
            android:hint="First Name"
            android:padding="@dimen/_12sdp"
            app:layout_constraintEnd_toStartOf="@id/LastnameField"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <EditText
            android:id="@+id/LastnameField"
            android:layout_width="0dp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginTop="@dimen/_44sdp"
            android:background="@drawable/rounded_edittext"
            android:hint="Last Name"
            android:padding="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/FirstNameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/FirstNameField"
            app:layout_constraintTop_toTopOf="@id/FirstNameField"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/DateField"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/rounded_edittext"
            android:focusable="false"
            android:hint="Date of Birth"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/FirstNameField" />

        <EditText
            android:id="@+id/PasswordField"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_118sdp"
            android:background="@drawable/rounded_edittext"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/FirstNameField" />

        <ImageView
            android:id="@+id/togglePasswordVisibility"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="36dp"
            android:src="@drawable/ic_visibility_off"
            app:layout_constraintBottom_toBottomOf="@id/PasswordField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/PasswordField"
            app:layout_constraintVertical_bias="0.739" />

        <EditText
            android:id="@+id/ConfirmPasswordField"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:background="@drawable/rounded_edittext"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PasswordField" />

        <ImageView
            android:id="@+id/toggleConfirmPasswordVisibility"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:src="@drawable/ic_visibility_off"
            app:layout_constraintBottom_toBottomOf="@id/ConfirmPasswordField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ConfirmPasswordField"
            app:layout_constraintVertical_bias="0.821" />

        <EditText
            android:id="@+id/EmailField"
            android:layout_width="@dimen/_320sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/rounded_edittext"
            android:drawableStart="@drawable/ic_email"
            android:hint="  Enter your email"
            android:padding="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ConfirmPasswordField" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_52sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/checkbox_custom"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/textView7"
            app:layout_constraintEnd_toStartOf="@id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_48sdp"
            android:text="@string/terms"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/checkBox"
            app:layout_constraintTop_toBottomOf="@id/EmailField" />

        <ImageButton
            android:id="@+id/Regbtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginTop="@dimen/_56sdp"
            android:background="@drawable/regbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>